<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:outlineAmbientShadowColor="@color/cardshadow"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/cardborders"
        app:strokeWidth="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/restaurantcardlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/imagecardView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/restaurantcardlayout"
                app:layout_constraintEnd_toStartOf="@+id/restaurant_name"
                app:layout_constraintStart_toStartOf="@+id/restaurantcardlayout"
                app:layout_constraintTop_toTopOf="@+id/restaurantcardlayout"
                >
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wagba" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Restaurant name"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="20dp"

                app:layout_constraintEnd_toEndOf="parent" />
            <RatingBar
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/restaurant_rating"
                app:layout_constraintTop_toBottomOf="@id/restaurant_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imagecardView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:numStars="5"
                android:stepSize="0.2"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>