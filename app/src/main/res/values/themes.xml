<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wagba" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ringcolor</item>
        <item name="colorPrimaryVariant">@color/cardshadow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="edittexts">
        <item name="background">@drawable/edit_text_bg</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:width">1000dp</item>
    </style>

    <style name="buttons">
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="incrementdecrementbutton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="incrementdecrementbutton.add">
        <item name="colorAccent">@color/greenadd</item>
        <item name="background">@drawable/rounded_buttons_green</item>
    </style>
    <style name="incrementdecrementbutton.remove">
        <item name="colorAccent">@color/redremove</item>
        <item name="background">@drawable/rounded_buttons_red</item>
    </style>
    <style name="textviews">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">@font/lobstertwo_bold</item>
    </style>

</resources>